    "#[Bài tập] Vẽ đường xoắn ốc\n",
    "import turtle\n",
    "t=turtle.Turtle()\n",
    "n = 1\n",
    "d = 2\n",
    "g = 30\n",
    "goc_toa_do = t.distance(0,0)\n",
    "while True:\n",
    "    t.forward(d)\n",
    "    t.left(g)\n",
    "    d += 0.5\n",
    "    n += 1\n",
    "turtle.done()"
